<%- include('../partials/header') %>

<a href="/jobs/<%= job._id %>/questions/new" class="btn btn-lg btn-success">Add new Question</a>
<% job.questions.forEach((ques, i){ %>
    <div><%= ques.title %></div>
    <div><%= ques.option1 %></div>
    <div><%= ques.option2 %></div>
    <div><%= ques.option3 %></div>
    <div><%= ques.option4 %></div>
    <div><%= ques.correctAnswer %></div>
    <a href="/jobs/<%= jobs._id %>/questions/<%= i %>/edit" class="btn-btn-warning"></a>
    <form action="/jobs/<%= jobs._id %>/questions/<%= i %>?_method=delete" method="post">
        <input type="submit" value="delete" class="btn btn-sm btn-danger">
    </form>
<hr>
<% }) %>


<%- include('../partials/footer') %>